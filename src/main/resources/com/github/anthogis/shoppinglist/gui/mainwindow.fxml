<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.anthogis.shoppinglist.gui.MainWindowController">


    <center>
        <TableView fx:id="shoppingListTable"

                   editable="true">
            <columns>
                <TableColumn text="Item"></TableColumn>
                <TableColumn text="Amount"></TableColumn>
            </columns>

        </TableView>
    </center>
    <bottom>
        <HBox>
            <Button fx:id="saveToJSON"
                    text="Save to JSON"
                    maxWidth="Infinity">
            </Button>
            <Button fx:id="saveToDropBox"
                    text="Save to DropBox"
                    maxWidth="Infinity">
            </Button>
            <Button fx:id="saveToH2"
                    text="Save to H2"
                    maxWidth="Infinity">
            </Button>
        </HBox>
    </bottom>


</BorderPane>
